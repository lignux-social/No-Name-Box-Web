<header id="header">
    <h1 id="logo"><a href="{{ base_url == '' ? '/' : base_url }}"> <img src="{{ site.logo }}" alt="{{ site.title }}" class="header-logo"></a></h1>
    <nav id="nav">
        <ul>
            {% for module in page.collection() %}
            <li><a href="#{{ module.folder|replace({'_': ''}) }}">{{ module.menu }}</a></li>
            {% endfor %}
        </ul>
    </nav>
</header>
